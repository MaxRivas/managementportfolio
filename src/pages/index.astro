---
import { info } from "../data/info.ts";

import Layout from "../layouts/Layout.astro";
import Hero from "../components/home/Hero.astro";
import Experience from "../components/home/Experience.astro";
import ProjectsWrapper from "../components/general/ProjectsWrapper.astro";
import MetaHead from "../components/general/MetaHead.astro";

const featureProjects = info.projects.filter(project => project.isFeatured).slice(0, 6);
const baseUrl = import.meta.env.BASE_URL ?? "/";
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <MetaHead
      title="Portfolio"
      description={info.about}
      ogImageUrl="/assets/images/profile.jpg"
    />
  </head>

  <body>
    <Layout>
      <Hero 
        name={info.name} 
        about={info.about} 
        jobTitle={info.jobDescription}
      />
      
      <Experience 
        title="PROFESSIONAL EXPERIENCE" 
        details={info.experience} 
      />
      
      <Experience 
        title="EDUCATION" 
        details={info.education} 
      />
      
      <!-- Languages Section -->
      <section class="mb-16">
        <div class="flex items-start justify-between flex-col lg:flex-row dark:text-light">
          <div class="lg:w-1/4 mb-8 lg:mb-0">
            <h2 class="text-2xl font-bold text-management-blue dark:text-blue-400 sticky top-8">
              LANGUAGES
            </h2>
          </div>
          
          <div class="lg:w-3/4">
            <div class="management-card">
              <div class="grid md:grid-cols-2 gap-6">
                {info.languages.map(language => (
                  <div class="flex justify-between items-center">
                    <span class="text-black dark:text-white font-medium">{language.name}</span>
                    <span class="text-management-green dark:text-green-400 text-sm font-semibold px-3 py-1 bg-gray-100 dark:bg-gray-700 rounded-full">
                      {language.proficiency}
                    </span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </section>
      
      {featureProjects.length > 0 && (
        <section class="mb-16">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-2xl font-bold text-management-blue dark:text-blue-400">
              FEATURED PROJECTS
            </h2>
            <a 
              href={`${baseUrl}${baseUrl.endsWith('/') ? '' : '/'}projects`}
              class="text-management-green dark:text-green-400 hover:underline text-sm font-medium"
            >
              View All Projects â†’
            </a>
          </div>
          <ProjectsWrapper projects={featureProjects} />
        </section>
      )}
      
      <!-- Skills Section -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold text-management-blue dark:text-blue-400 mb-8">
          CORE COMPETENCIES
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="management-card">
            <h3 class="text-lg font-semibold mb-4 text-management-blue dark:text-blue-400">
              Management Skills
            </h3>
            <div class="space-y-2">
              {info.skills
                .filter(skill => skill.category === "management")
                .map(skill => (
                  <div class="flex justify-between items-center">
                    <span class="text-sm text-black dark:text-white">{skill.name}</span>
                    <span class="skill-badge text-xs">{skill.level}</span>
                  </div>
                ))
              }
            </div>
          </div>
          
          <div class="management-card">
            <h3 class="text-lg font-semibold mb-4 text-management-green dark:text-green-400">
              Technical Skills
            </h3>
            <div class="space-y-2">
              {info.skills
                .filter(skill => skill.category === "technical")
                .map(skill => (
                  <div class="flex justify-between items-center">
                    <span class="text-sm text-black dark:text-white">{skill.name}</span>
                    <span class="skill-badge text-xs">{skill.level}</span>
                  </div>
                ))
              }
            </div>
          </div>
          
          <div class="management-card">
            <h3 class="text-lg font-semibold mb-4 text-accent dark:text-yellow-400">
              Soft Skills
            </h3>
            <div class="space-y-2">
              {info.skills
                .filter(skill => skill.category === "soft")
                .map(skill => (
                  <div class="flex justify-between items-center">
                    <span class="text-sm text-black dark:text-white">{skill.name}</span>
                    <span class="skill-badge text-xs">{skill.level}</span>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </section>
    </Layout>
  </body>
</html>