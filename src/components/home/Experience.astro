---
import { IExperiences } from "../../types/index.ts";

const { title, details } = Astro.props as IExperiences;
---

<section
  id="experience"
  class="flex items-start justify-between flex-col lg:flex-row dark:text-light mb-16"
>
  <div class="lg:w-1/4 mb-8 lg:mb-0">
    <h2 class="text-2xl font-bold text-management-blue dark:text-blue-400 sticky top-8">
      {title}
    </h2>
  </div>
  
  <div class="lg:w-3/4 space-y-8">
    {
      details.map((item, index) => (
        <div class="leadership-card experience-timeline">
          <div class="timeline-dot"></div>
          <div class="pl-8">
            <div class="flex justify-between items-start flex-col sm:flex-row mb-4">
              <div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-1">
                  {item.name}
                </h3>
                <p class="text-management-green dark:text-green-400 text-sm font-medium">
                  {item.location}
                </p>
              </div>
              <span class="text-sm text-gray-600 dark:text-gray-400 mt-2 sm:mt-0 px-3 py-1 bg-gray-100 dark:bg-gray-700 rounded-full">
                {item.startDate} - {item.endDate}
              </span>
            </div>
            
            <ul class="space-y-2">
              {item.description.map((desc) => (
                <li class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed flex items-start">
                  <svg 
                    class="w-4 h-4 text-management-blue dark:text-blue-400 mr-2 mt-0.5 flex-shrink-0" 
                    fill="currentColor" 
                    viewBox="0 0 20 20"
                  >
                    <path 
                      fill-rule="evenodd" 
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" 
                      clip-rule="evenodd" 
                    />
                  </svg>
                  {desc}
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))
    }
  </div>
</section>