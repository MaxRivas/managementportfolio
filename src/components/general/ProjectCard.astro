---
import { IProjectDetails } from "../../types/index.ts";
const { projectDetail } = Astro.props as IProjectDetails;
const { title, thumbnail, liveUrl, githubUrl, description, technologies } = projectDetail;
const baseUrl = import.meta.env.BASE_URL ?? "/";
const imageSrc = thumbnail.startsWith('/') ? `${baseUrl.endsWith('/') ? baseUrl : baseUrl + '/'}${thumbnail.slice(1)}` : thumbnail;
---

<article class="project-card w-full max-h-[30rem] overflow-hidden relative group management-card">
  <div class="flex items-center absolute right-4 top-4 z-10 gap-2">
    {
      githubUrl && (
        <a
          href={githubUrl}
          class="text-white p-3 bg-black/70 rounded-full backdrop-blur-md hover:bg-black/80 transition-colors"
          aria-label="View source code"
          target="_blank"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="feather feather-github"
          >
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9.5 17.5v-2.87"></path>
          </svg>
        </a>
      )
    }

    {
      liveUrl && (
        <a
          href={liveUrl}
          class="text-white p-3 bg-management-blue/70 rounded-full backdrop-blur-md hover:bg-management-blue/80 transition-colors"
          aria-label="View live project"
          target="_blank"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="feather feather-external-link"
          >
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
            <polyline points="15,3 21,3 21,9"></polyline>
            <line x1="10" y1="14" x2="21" y2="3"></line>
          </svg>
        </a>
      )
    }
  </div>
  
  <a
    href={liveUrl ? liveUrl : githubUrl}
    target="_blank"
    class="block"
  >
    <img
      src={imageSrc}
      class="w-full h-48 object-cover scale-100 hover:scale-105 transition duration-500"
      loading="lazy"
      alt={`${title} project thumbnail`}
    />
  </a>
  
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2 dark:text-white">{title}</h3>
    {description && (
      <p class="text-gray-600 dark:text-gray-300 mb-4 text-sm leading-relaxed">
        {description}
      </p>
    )}
    {technologies && technologies.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {technologies.map((tech) => (
          <span class="skill-badge text-xs">
            {tech}
          </span>
        ))}
      </div>
    )}
  </div>
</article>